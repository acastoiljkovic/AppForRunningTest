<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    >

    <android.support.v7.widget.CardView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"

        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical"


                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-medium"
                    android:text="Registration Form"
                    android:textColor="@color/White"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layerType="software"
                    android:src="@drawable/dash" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Choose Avatar"
                        android:gravity="right|center"
                        android:textColor="@color/White"
                        android:textSize="20dp"
                        />
                    <Spinner
                        android:gravity="right"
                        android:id="@+id/spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:spinnerMode="dropdown"
                        android:tooltipText="Choose avatar"
                        >

                    </Spinner>
                </LinearLayout>




                <RelativeLayout
                    android:id="@+id/RelativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ImageView1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:src="@drawable/ic_account_box_black_24dp"
                        android:tint="@color/White"


                        />

                    <EditText
                        android:id="@+id/Username"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView1"
                        android:background="@color/editTxt"
                        android:hint="Username"
                        android:singleLine="true"
                        android:paddingLeft="25dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp" />

                </RelativeLayout>
                //username

                <RelativeLayout
                    android:id="@+id/RelativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RelativeLayout1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:src="@drawable/ic_vpn_key_black_24dp"
                        android:tint="@color/White"


                        />

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView3"
                        android:background="@color/editTxt"
                        android:hint="Password"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:paddingLeft="25dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp" />

                </RelativeLayout>
                //password

                <RelativeLayout
                    android:id="@+id/RelativeLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RelativeLayout1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:src="@drawable/ic_email_black_24dp"
                        android:tint="@color/White"

                        />

                    <EditText
                        android:id="@+id/Email"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView4"
                        android:background="@color/editTxt"
                        android:hint="Email"
                        android:singleLine="true"
                        android:paddingLeft="25dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp" />

                </RelativeLayout>
                //email

                <RelativeLayout
                    android:id="@+id/RelativeLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RelativeLayout1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:src="@drawable/ic_text_format_black_24dp"
                        android:tint="@color/White"

                        />

                    <EditText
                        android:id="@+id/Ime"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView5"
                        android:background="@color/editTxt"
                        android:hint="Firstname"
                        android:singleLine="true"
                        android:paddingLeft="25dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp" />

                </RelativeLayout>
                //Ime

                <RelativeLayout
                    android:id="@+id/RelativeLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RelativeLayout1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:src="@drawable/ic_text_format_black_24dp"
                        android:tint="@color/White"


                        />

                    <EditText
                        android:id="@+id/Prezime"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView6"
                        android:background="@color/editTxt"
                        android:hint="Lastname"
                        android:singleLine="true"
                        android:paddingLeft="25dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp" />

                </RelativeLayout>
                //Prezime

                <RelativeLayout
                    android:id="@+id/RelativeLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RelativeLayout1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:src="@drawable/ic_date_range_black_24dp"
                        android:tint="@color/White"


                        />

                    <EditText
                        android:id="@+id/Datum"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView7"
                        android:background="@color/editTxt"
                        android:hint="Birth Date"
                        android:paddingLeft="25dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp" />

                </RelativeLayout>
                //Datum

                <RelativeLayout
                    android:id="@+id/RelativeLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RelativeLayout1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:src="@drawable/ic_person_black_24dp"
                        android:tint="@color/White"


                        />

                    <EditText
                        android:id="@+id/Visina"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView8"
                        android:background="@color/editTxt"
                        android:hint="Height"
                        android:paddingLeft="25dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp" />

                </RelativeLayout>
                //Visina

                <RelativeLayout
                    android:id="@+id/RelativeLayout8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RelativeLayout1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:src="@drawable/ic_person_black_24dp"
                        android:tint="@color/White"


                        />

                    <EditText
                        android:id="@+id/Tezina"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView9"
                        android:background="@color/editTxt"
                        android:hint="Weight"
                        android:paddingLeft="25dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp" />

                </RelativeLayout>
                //Tezina

                <RelativeLayout
                    android:id="@+id/RelativeLayout9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RelativeLayout1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center_horizontal">

                            <RadioButton
                                android:id="@+id/radioButtonM"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"


                                />

                            <ImageView
                                android:id="@+id/imageView10"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_toRightOf="@+id/radioButtonM"
                                android:src="@drawable/man"
                                android:layout_marginRight="20dp"
                                />

                            <RadioButton
                                android:id="@+id/radioButtonZ"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="20dp"
                                />

                            <ImageView
                                android:id="@+id/imageView11"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/women"
                                android:layout_toRightOf="@+id/imageView10"

                                />
                        </RadioGroup>





                    </LinearLayout>


                    />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RelativeLayout10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RelativeLayout1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp">


                    <Button
                        android:id="@+id/btnUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimaryDark"
                        android:layout_marginRight="95dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="95dp"
                        android:text="REGISTER"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/White"
                        />


                    <ImageView
                        android:id="@+id/imageView55"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/btnUpdate"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layerType="software"
                        android:src="@drawable/dash" />

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>